<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uottawa.eecs.seg2505.objetpret.RetirerObjetActivity" >

    <Button
        android:id="@+id/buttonSelectAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dip"
        android:gravity="left|center_vertical"
        android:onClick="onSelectAll"
        android:paddingLeft="1dip"
        android:text="@string/button_select_all"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listViewRetirer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.36" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onRetour"
            android:text="@string/ButtonRetour" />
    </FrameLayout>

</LinearLayout>